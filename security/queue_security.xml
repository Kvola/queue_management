<odoo>
    <!-- Groupes de sécurité -->
    <record id="group_queue_user" model="res.groups">
        <field name="name">File d'Attente: Utilisateur</field>
        <field name="category_id" ref="base.module_category_services"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_queue_manager" model="res.groups">
        <field name="name">File d'Attente: Manager</field>
        <field name="category_id" ref="base.module_category_services"/>
        <field name="implied_ids" eval="[(4, ref('group_queue_user'))]"/>
    </record>

    <!-- Règles d'accès aux enregistrements -->
    <record id="queue_service_rule_user" model="ir.rule">
        <field name="name">Queue Service: User Access</field>
        <field name="model_id" ref="model_queue_service"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_queue_user'))]"/>
    </record>

    <record id="queue_ticket_rule_user" model="ir.rule">
        <field name="name">Queue Ticket: User Access</field>
        <field name="model_id" ref="model_queue_ticket"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_queue_user'))]"/>
    </record>
</odoo>