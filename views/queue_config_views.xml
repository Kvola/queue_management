<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Form -->
    <record id="view_queue_config_form" model="ir.ui.view">
        <field name="name">queue.config.form</field>
        <field name="model">queue.config</field>
        <field name="arch" type="xml">
            <form string="Configuration File d'Attente">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" required="1"/></h1>
                    </div>
                    
                    <group>
                        <group string="Notifications">
                            <field name="enable_sms_notifications"/>
                            <field name="enable_email_notifications"/>
                        </group>
                        <group string="Interface">
                            <field name="auto_refresh_interval" 
                                   widget="integer" 
                                   required="auto_refresh_interval > 0"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Affichage">
                            <field name="show_estimated_time"/>
                            <field name="show_queue_position"/>
                            <field name="max_display_tickets" 
                                   widget="integer"
                                   required="max_display_tickets > 0"/>
                        </group>
                        <group string="Paramètres Business">
                            <field name="allow_ticket_cancellation"/>
                            <field name="require_customer_info"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Tree -->
    <record id="view_queue_config_tree" model="ir.ui.view">
        <field name="name">queue.config.tree</field>
        <field name="model">queue.config</field>
        <field name="arch" type="xml">
            <tree string="Configurations File d'Attente" 
                  decoration-success="enable_sms_notifications and enable_email_notifications"
                  decoration-warning="not enable_sms_notifications and not enable_email_notifications">
                <field name="name"/>
                <field name="enable_sms_notifications" widget="boolean_toggle"/>
                <field name="enable_email_notifications" widget="boolean_toggle"/>
                <field name="auto_refresh_interval" string="Refresh (sec)"/>
                <field name="max_display_tickets" string="Max Affichage"/>
                <field name="show_estimated_time" invisible="1"/>
                <field name="show_queue_position" invisible="1"/>
                <field name="allow_ticket_cancellation" invisible="1"/>
                <field name="require_customer_info" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Vue Search -->
    <record id="view_queue_config_search" model="ir.ui.view">
        <field name="name">queue.config.search</field>
        <field name="model">queue.config</field>
        <field name="arch" type="xml">
            <search string="Rechercher Configuration">
                <field name="name" string="Configuration" 
                       filter_domain="[('name', 'ilike', self)]"/>
                
                <!-- Filtres -->
                <filter name="sms_enabled" string="SMS Activé" 
                        domain="[('enable_sms_notifications', '=', True)]"/>
                <filter name="email_enabled" string="Email Activé" 
                        domain="[('enable_email_notifications', '=', True)]"/>
                <filter name="cancellation_allowed" string="Annulation Autorisée" 
                        domain="[('allow_ticket_cancellation', '=', True)]"/>
                <filter name="customer_info_required" string="Infos Client Requises" 
                        domain="[('require_customer_info', '=', True)]"/>
                
                <separator/>
                
                <!-- Groupes -->
                <group expand="0" string="Grouper par">
                    <filter name="group_notifications" string="Notifications" 
                            context="{'group_by': 'enable_sms_notifications'}"/>
                    <filter name="group_display" string="Affichage Temps" 
                            context="{'group_by': 'show_estimated_time'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vue Kanban (optionnelle) -->
    <record id="view_queue_config_kanban" model="ir.ui.view">
        <field name="name">queue.config.kanban</field>
        <field name="model">queue.config</field>
        <field name="arch" type="xml">
            <kanban string="Configurations File d'Attente" 
                    class="oe_background_grey o_kanban_dashboard">
                <field name="name"/>
                <field name="enable_sms_notifications"/>
                <field name="enable_email_notifications"/>
                <field name="auto_refresh_interval"/>
                <field name="max_display_tickets"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="name"/>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6">
                                        <t t-if="record.enable_sms_notifications.raw_value">
                                            <span class="badge badge-success">SMS</span>
                                        </t>
                                        <t t-if="record.enable_email_notifications.raw_value">
                                            <span class="badge badge-info">Email</span>
                                        </t>
                                    </div>
                                    <div class="col-6 text-right">
                                        <small class="text-muted">
                                            Refresh: <field name="auto_refresh_interval"/>s
                                        </small>
                                    </div>
                                </div>
                                
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <small>
                                            Max affichage: <field name="max_display_tickets"/> tickets
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action Window -->
    <record id="action_queue_config" model="ir.actions.act_window">
        <field name="name">Configuration File d'Attente</field>
        <field name="res_model">queue.config</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_ids" 
               eval="[(5, 0, 0),
                      (0, 0, {'view_mode': 'tree', 'view_id': ref('view_queue_config_tree')}),
                      (0, 0, {'view_mode': 'form', 'view_id': ref('view_queue_config_form')}),
                      (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_queue_config_kanban')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer votre première configuration de file d'attente !
            </p>
            <p>
                Configurez les paramètres de notification, d'affichage et de business 
                pour optimiser votre système de file d'attente.
            </p>
        </field>
    </record>
</odoo>