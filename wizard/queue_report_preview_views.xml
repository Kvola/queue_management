<!-- views/queue_report_preview_views.xml -->
<odoo>
    <record id="view_queue_report_preview_form" model="ir.ui.view">
        <field name="name">queue.report.preview.form</field>
        <field name="model">queue.report.preview</field>
        <field name="arch" type="xml">
            <form string="Aperçu du Rapport">
                <sheet>
                    <div class="oe_title">
                        <h1>Aperçu du Rapport</h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="period_summary" readonly="1"/>
                            <field name="services_summary" readonly="1"/>
                            <field name="elements_included" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <field name="preview_data" readonly="1" nolabel="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="generate_full_report" string="Générer le Rapport Complet" type="object" class="btn-primary"/>
                    <button string="Retour" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>